<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Editar Rol</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="#rol/">Roles</a></li>
                    <li class="breadcrumb-item">Editar</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Editar rol {{data.nombre}}</h3>
                    </div>
                    <form id="form-new-rol" class="form-submit set-url-config" url-index="api" attr-target="action" role="form" action="rol/{{id}}" method="PUT" fn-success="myApp.routes.navigate('#rol/');">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="nombre_rol">Nombre del rol</label>
                                <input value="{{data.nombre}}" type="text" class="form-control" name="nombre" id="nombre_rol" placeholder="Nombre del rol">
                            </div>
                            <div class="form-group">
                                <label for="descripcion_rol">Descripci√≥n del rol</label>
                                <textarea class="form-control" name="descripcion" id="descripcion_rol" cols="30" rows="5">{{data.descripcion}}</textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a href="#rol/" class="btn btn-default">Regresar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
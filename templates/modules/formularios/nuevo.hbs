<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Registrar nuevo formulario</h3>
                    </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <form id="form-new-rol" class="form-submit set-url-config" url-index="api" attr-target="action" role="form" action="formulario" method="post" fn-success="myApp.routes.navigate('#formulario/');">
                                        <div class="form-group">
                                            <label for="clave_form">Clave</label>
                                            <input type="text" class="form-control" name="clave" id="clave_form" placeholder="Clave para formulario">
                                        </div>
                                        <div class="form-group">
                                            <label for="nombre_form">Nombre del formulario</label>
                                            <input type="text" class="form-control" name="nombre" id="nombre_form" placeholder="Nombre del formulario">
                                        </div>
                                        <div class="form-group">
                                            <label for="descripcion_form">Descripci√≥n del formulario</label>
                                            <textarea class="form-control" name="descripcion" id="descripcion_form" cols="30" rows="5"></textarea>
                                        </div>
                                        <textarea name="formulario" class="form-control hide" id="data-formulario" cols="30" rows="5"></textarea>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                            <a href="#rol/" class="btn btn-default">Regresar</a>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-8">
                                    <div id="form-create-formulario" dest="#data-formulario"></div>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>
